<div class="onboarding-container" style="padding: 70px 0px">
  <div class="progress-bar">
    <div class="progress-step"></div>
    <div class="progress-step"></div>
    <div class="progress-step active"></div>
  </div>

  <div class="age-content">
    <div class="cake-icon">✨</div>

    <h1 class="age-title">Raconte ton histoire</h1>

    <p class="age-subtitle">
      Quelques mots sur tes passions sportives pour que les autres te découvrent
    </p>

    <p class="age-description">
      <em>Sois toi-même c'est déjà extraordinaire!</em>
    </p>

    <%= simple_form_for @user, url: wizard_path, method: :put, html: { data: { controller: "bio-character-counter" } } do |f| %>
      <div class="form-label-custom">Raconte-nous qui tu es en quelques mots</div>

      <%= f.input :bio, as: :text, input_html: {
        class: "bio-textarea",
        placeholder: "Ex: Passionnée de trail et toujours partante pour un run collectif...",
        maxlength: 200,
        data: { 
          bio_character_counter_target: "textarea",
          action: "input->bio-character-counter#updateCounter"
        }
      }, label: false %>

      <div class="character-counter">
        <span class="count" data-bio-character-counter-target="counter">0</span>/200 caractères
      </div>

      <!-- Inspiration Section -->
      <div class="inspiration-section">
        <div class="inspiration-header">
          💡 Besoin d'inspiration ?
        </div>
        <div class="inspiration-example">
          <strong>Passionnée de trail et toujours partante pour un run collectif 🏃‍♀️</strong>
        </div>
        <div class="inspiration-example">
          <strong>Amateur·rice de basket depuis l'enfance, je cherche des coéquipiers motivés ! 🏀</strong>
        </div>
      </div>

      <!-- Pro Tip -->
      <div class="pro-tip">
        <div class="pro-tip-header">
          ✏️ Astuce pro :
        </div>
        <div class="pro-tip-content">
          Mentionne tes objectifs, ton niveau, ou même ton sport de rêve ! Plus tu es authentique, plus tu attireras les bonnes personnes. 💫
        </div>
      </div>

      <div class="buttons-container">
        <%= link_to "Précédent", previous_wizard_path, class: "btn-custom btn-back" %>
        <%= f.submit "Terminer", class: "continue-btn" %>
      </div>
    <% end %>
  </div>
</div>

