<header class="topbar d-flex justify-content-between align-items-center px-3 py-2">
  <!-- Burger menu -->
  <button class="btn p-0"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#dashboardMenu"
          aria-controls="dashboardMenu">
    <i class="fa-solid fa-bars fa-lg"></i>
  </button>

  <!-- Titre centré -->
  <h1 class="topbar__title m-0 text-center flex-grow-1">
    <%= content_for?(:page_title) ? yield(:page_title) : "FIT BUDDY" %>
  </h1>

  <!-- Avatar + Dropdown -->
  <div class="d-flex align-items-center gap-2">
    <% if content_for?(:page_button) %>
      <%= yield :page_button %>
    <% end %>

    <% if current_user %>
      <div class="dropdown">
        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <%= render "layouts/avatar",
                image_url: (url_for(current_user.avatar) if current_user.avatar.attached?),
                initials: user_initials(current_user),
                gradient: "gradient-purple-pink",
                size: "sm",
                extra_classes: "me-2" %>
        </a>

        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
          <li><%= link_to "Mon Profil", profile_path(current_user), class: "dropdown-item" %></li>
          <li><%= link_to "Paramètres", edit_user_registration_path, class: "dropdown-item" %></li>
          <li><hr class="dropdown-divider"></li>
          <li><%= link_to "Déconnexion", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item text-danger" %></li>
        </ul>
      </div>
    <% else %>
      <div>
        <%= link_to "Se connecter", new_user_session_path, class: "btn btn-sm btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</header>
