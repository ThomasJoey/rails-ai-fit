<header class="home-header d-flex justify-content-between align-items-center px-3 py-2">
  <!-- Bouton Burger -->
  <button class="btn btn-link p-0"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#dashboardMenu"
          aria-controls="dashboardMenu">
    <i class="fa-solid fa-bars fa-lg"></i>
  </button>

  <!-- Titre -->
  <h1 class="home-header__title m-0">FIT BUDDY</h1>

  <!-- Avatar User -->
  <div>
    <% if current_user %>
      <%= link_to profile_path(current_user), class: "btn p-0 d-flex align-items-center" do %>
        <%= render "layouts/avatar",
              image_url: (url_for(current_user.avatar) if current_user.avatar.attached?),
              initials: user_initials(current_user),
              gradient: "gradient-purple-pink",
              size: "sm",
              extra_classes: "me-2" %>

      <% end %>
    <% else %>
      <%= link_to new_user_session_path, class: "btn p-0 d-flex align-items-center" do %>
        <%= render "layouts/avatar",
              initials: "?",
              gradient: "gradient-grey",
              size: "sm",
              extra_classes: "me-2" %>
        <span>Se connecter</span>
      <% end %>
    <% end %>
  </div>
</header>
