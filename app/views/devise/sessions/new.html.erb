<div class="login-container">
  <h2>AI-Fit</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: {
            autocomplete: "email",
            placeholder: "your@email.com"
          },
          label: "Email" %>

      <%= f.input :password,
          required: false,
          input_html: {
            autocomplete: "Mot de passe confirmation",
            placeholder: "••••••••"
          },
          label: "Mot de passe" %>

      <%= f.input :remember_me,
          as: :boolean,
          label: "Se souvenir de moi" if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Connexion" %>
    </div>
  <% end %>

  <div class="shared-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
