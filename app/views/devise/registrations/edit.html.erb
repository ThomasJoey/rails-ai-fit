<div class="form-container">
  <%= link_to :back, style: "color: white;" do %>
    <i class="fa-solid fa-arrow-left"></i>
    Retour
  <% end %>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  label: "Mot de passe",
                  hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label:"Nouveau mot de passe",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  label: "Confirmation du nouveau mot de passe",
                  hint: "Retaper votre mot de passe",
                  required: true,
                  input_html: { autocomplete: "supprimer mon compte" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre Ã  jour", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div> <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
</div>
