<div class="row justify-content-center search-bar">
  <div class="col-sm-8 my-3">
    <%= form_with url: search_conversations_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control search-bar",
            placeholder: "Recherche un Buddy"
        %>
      <%= submit_tag "Rechercher", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <turbo-frame id="dashboard_search_results">
        <% if params[:query].present? %>
          <%= render partial: "pages/search_results", locals: { users: @users } %>
        <% else %>
          <%= render partial: "pages/search_results", locals: { users: @users } %>
        <% end %>
      </turbo-frame>
    </div>
  </div>
</div>
