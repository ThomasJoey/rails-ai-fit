<div class="conversations-index container py-5">
    <% content_for :page_title, "Messages" %>

    <% content_for :page_button do %>
      <%= link_to new_conversation_path, class: "plus-button", aria: { label: "Nouveau message" } do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
    <% end %>

    <% content_for :header do %>
      <%= render 'layouts/topbar_header' %>
    <% end %>

   <div class="infos-card-wrapper">
    <div class="infos-card__label">Créateur d'évènements</div>

    <%= render "layouts/infos_card",
        title: "FitBuddy Event Creator",
        description: "Create sport events instantly! Tell me what activity you want to organize and I’ll help you set it up",
        icon: content_tag(:i, "", class: "fa-solid fa-calendar-day"),
        actions: content_tag(:span, "Smart Planning", class: "badge badge-orange") +
                content_tag(:span, "Auto-Invite", class: "badge badge-pink") %>
  </div>

  <section class="">
    <div class="overlay d-flex align-items-center justify-content-center">
      <div>
        <%= button_to "+ Nouvelle conversation",
      conversations_path,
      method: :post,
      form: { data: { turbo: "false" } },
      class: "btn btn-success w-100 mb-3" %>


      <%= link_to "+ Discute avec des gens",
      new_conversation_path,
      class: "btn btn-success w-100 mb-3" %>

      </div>
    </div>
  </section>

  <!-- Conversations -->
  <div class="infos-card-wrapper">
    <div class="infos-card__label">Conversation récente</div>
    <div class="conversation-list">
      <% @conversations.each do |conversation| %>
        <%= render partial: "layouts/conversation_card", locals: { conversation: conversation, current_user: current_user } %>
      <% end %>
    </div>
  </div>
</div>
