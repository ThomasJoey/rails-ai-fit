
    <% content_for :page_title, "Messages" %>

      <% content_for :page_button do %>
        <%= link_to new_conversation_path, class: "plus-button", aria: { label: "Nouvelle conversation" } do %>
          <i class="fa-solid fa-plus"></i>
        <% end %>
      <% end %>

    <% content_for :header do %>
      <%= render 'layouts/topbar_header' %>
    <% end %>

<div class="conversations-index">
  <div class="infos-card-wrapper">

    <%= link_to events_path, class: "p-0 border-0 bg-transparent w-100 text-start text-decoration-none" do %>

      <%= render "layouts/infos_card",
          title: "Retrouves les evènements",
          description: "Consulte par ici toutes les prochaines sessions et rejoins celles qui t’intéressent !",
          icon: content_tag(:i, "", class: "fa-solid fa-hands-clapping"),
          bg: "rgba(245, 235, 255, 1)",
          border_gradient: "linear-gradient(90deg, rgba(167, 79, 255, 0.35), rgba(22, 110, 253, 0.35))",
          icon_gradient: "linear-gradient(135deg, rgba(167, 79, 255, 1), rgba(22, 110, 253, 1))"
      %>

    <% end %>

  </div>

  <!-- Conversations -->
<div class ="conversation-wrapper">
  <div class="infos-card-wrapper">
      <div class="infos-card__label">Conversation récente</div>
      <div class="conversation-list">
        <% @conversations.each do |conversation| %>
          <%= render partial: "layouts/conversation_card", locals: { conversation: conversation, current_user: current_user } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
