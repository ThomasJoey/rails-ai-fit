<%= turbo_stream.replace "event-button-container" do %>
  <%= render partial: "conversations/event_button", locals: { conversation: @conversation, visible: @sport_will } %>
<% end %>

<%= turbo_stream.append "messages" do %>
  <%= render "messages/messages", messages: @conversation.messages.last(2) %>
<% end %>

<%= turbo_stream.replace "new_message" do %>
  <%= render "messages/form", conversation: @conversation, message: Message.new %>
<% end %>
