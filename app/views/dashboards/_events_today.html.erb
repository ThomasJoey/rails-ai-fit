<!-- Mes événements -->
<h6 class="section-title fw-bold mb-3">
  <i class="fa-solid fa-calendar-days me-2"></i> Mes événements
</h6>

<% if @events.present? && @events.any? %>
  <div class="events-list d-flex flex-column gap-3">
    <% @events.each do |event| %>
      <div class="event-card d-flex justify-content-between align-items-center">
        <div>
          <div class="event-title"><%= event.title %></div>
          <div class="event-meta text-muted">
            <%= event.location %> — <%= l(event.starts_at, format: :long) %>
          </div>
        </div>
        <%= link_to "Voir", event_path(event), class: "event-link" %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-muted">Tu ne participes encore à aucun événement.</p>
<% end %>

