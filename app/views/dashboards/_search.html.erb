
<!-- Search -->
<%= form_with url: search_path, method: :get, local: true, class: "search-form mb-3" do %>
  <div class="search-bar d-flex align-items-center">
    <i class="fa-solid fa-magnifying-glass me-2"></i>
    <%= text_field_tag :query, params[:query], class: "search-input", placeholder: "Rechercher par sport, lieu..." %>
  </div>
<% end %>
