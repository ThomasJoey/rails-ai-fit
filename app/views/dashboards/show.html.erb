<div class="container mt-4">
  <h1>Mon Dashboard</h1>

  <div class="card p-3 shadow-sm">
    <div class="d-flex align-items-center mb-3">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, class: "avatar me-3" %>
      <% else %>
        <div class="avatar-placeholder me-3"></div>
      <% end %>
      <div>
        <h4 class="mb-0"><%= @user.first_name %> <%= @user.last_name %></h4>
        <p class="text-muted mb-0"><%= @user.email %></p>
      </div>
    </div>

    <p><strong>Localisation :</strong> <%= @user.try(:location) || "Non renseignÃ©e" %></p>
    <p><strong>Membre depuis :</strong> <%= @user.created_at.strftime("%d %B %Y") %></p>

    <%= link_to "Modifier mon compte", edit_user_registration_path, class: "btn btn-primary mt-3" %>
  </div>
</div>
