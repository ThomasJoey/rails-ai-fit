<!-- Sportifs près de toi -->
<h6 class="section-title mb-3 ">
  <i class="fa-solid fa-bolt me-2 "></i> Sportifs près de toi
</h6>

<div class="d-flex gap-3 overflow-auto futuristic-users">
  <% (@users_nearby || []).each do |u| %>
    <div class="user-pill d-flex flex-column justify-content-center align-items-center text-white">
      <div class="user-initials"><%= u[:initials] %></div>
      <div class="user-distance mt-1">📍 <%= u[:distance] %> km</div>
      <div class="user-sport"><%= u[:sport] %></div>
    </div>
  <% end %>
</div>
