<h1>Propositions d'événements sportifs</h1>

<p>Voici trois idées générées pour toi :</p>

<%= form_with url: confirm_event_path(@event), method: :post, local: true do |f| %>
  <% @proposals.to_s.split(/\n{2,}/).each_with_index do |proposal, i| %>
    <div style="margin-bottom: 1rem; padding: 1rem; border: 1px solid #ccc; border-radius: 8px;">
      <label>
        <%= f.radio_button :proposal, proposal, id: "proposal_#{i}" %>
        <strong>Proposition <%= i + 1 %> :</strong><br>
        <%= simple_format(proposal) %>
      </label>
    </div>
  <% end %>

  <%= f.submit "Valider mon choix", class: "btn btn-primary" %>
<% end %>
