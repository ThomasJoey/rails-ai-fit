<div class="container py-5 profile-page">
  <h1>Mon Profil</h1>

  <div class="profile-card">
    <img src="https://images.unsplash.com/photo-1632765854612-9b02b6ec2b15?q=80&w=2586&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Avatar" class="avatar">
    <div class="name"><%= current_user.first_name %> <%= current_user.last_name %></div>
    <div class="location">📍 Paris, France</div>

    <div class="sports">
      <span class="badge">🏃 Running</span>
      <span class="badge">🚴 Vélo</span>
      <span class="badge">🧘 Yoga</span>
    </div>
  </div>

  <h2>📅 Mes événements</h2>
  <!-- ta liste des events ici -->
  <% if @events.any? %>
    <ul class="list-group">
      <% @events.each do |event| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= event.title %></strong><br>
            <small class="text-muted"><%= event.location %> — <%= l(event.starts_at, format: :long) %></small>
          </div>
          <%= link_to "Voir", event_path(event), class: "btn btn-sm btn-outline-primary" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">Tu ne participes encore à aucun événement.</p>
  <% end %>
</div>
